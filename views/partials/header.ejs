<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="output.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.14.0/devicon.min.css">
    <script src="https://kit.fontawesome.com/7a5767171f.js" crossorigin="anonymous"></script>
    <title>Members Clubhouse</title>
</head>
<nav>
    <ul>
        <li><a href="/">Home</a></li>
        <% if (typeof locals.currentUser == "undefined") { %>
        <li><a href="/sign-up">Sign up</a></li>
        <li><a href="/log-in">Log In</a></li>
        <% } %>
        <% if (locals.currentUser) { %>
        <li><a href="/log-out">Log Out</a></li>
        <li><i class="fas fa-user-circle"></i> <%= locals.currentUser.firstname %></li>
        <% } %>
        <% if (typeof locals.currentUser != "undefined" && !locals.currentUser.isMember) { %>
        <li><a href="/join">Join the Club</a></li>
        <% } %>
        <% if (typeof locals.currentUser != "undefined" && locals.currentUser.firstname !== "guest" && !locals.currentUser.isAdmin && posts.some((post) => post.author.username === locals.currentUser.username)) { %>
        <li><a href="/admin"><span class="text-yellow-300w"><i class="fas fa-star"></i></span> Become an Admin</a></li>
        <% } %>
    </ul>
</nav>